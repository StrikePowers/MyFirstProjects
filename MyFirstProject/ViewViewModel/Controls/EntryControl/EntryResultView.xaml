<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.Controls.EntryControl.EntryResultView"
             Title="{Binding Title}"
             BackgroundColor="LightPink">
    
    <StackLayout>
        
        <Label Text="You Entered: "
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Blue"
               FontSize="Large"
               FontAttributes="Bold"/>

        <Label Text="{Binding ResultsText}"
               VerticalOptions="Center"
               TextColor="Red"
               HorizontalOptions="Center"
               FontSize="Large"
               FontAttributes="Bold"/>

    </StackLayout>

</ContentPage>